@model  Ganedata.Core.Entities.Domain.MarketVehicleListViewModel
@using Ganedata.Core.Entities.Helpers

@section scripts {

    @Html.DevExpress().GetStyleSheets(
        new StyleSheet { ExtensionType = ExtensionType.GridView, Theme = GaneStaticAppExtensions.DevexTheme }
        )

    @Html.DevExpress().GetScripts(
        new Script { ExtensionType = ExtensionType.GridView }
        )
}

@{
    ViewBag.Title = "Market Vehicles";
}

<h2><span>@ViewBag.Title</span></h2>

<div class="table-responsive col-md-12 p-0">
    @if (ViewBag.Message != null)
    {
        <div class="alert-success col-md-12">
            @Model.ResultsCount Results
        </div>
    }

    @Html.Action("MarketsVehicleListPartial", "Markets", Model)

</div>

<div class="col-md-offset-2 col-md-10 bottom-right">
    <a class="btn btn-primary" href="/markets/vehicles/create"><b class="fa fa-plus"></b> Add Vehicle</a>
</div>
