@using Ganedata.Core.Entities.Helpers

@section scripts {

    @Html.DevExpress().GetStyleSheets(
        new StyleSheet { ExtensionType = ExtensionType.GridView, Theme = GaneStaticAppExtensions.DevexTheme }
        )

    @Html.DevExpress().GetScripts(
        new Script { ExtensionType = ExtensionType.GridView }
        )
}

<script type="text/javascript">
    function OnGridFocusedRowChanged(s, e) {
        var name = s.name;
        if (name.indexOf("_stockListdetailsgv") >= 0) {
            $('#selkeyMoveStock').val(s.GetRowKey(s.GetFocusedRowIndex()));
        }
    }
</script>


@Html.Hidden("selkeyMoveStock", null)

@{
    ViewBag.Title = "Move Stock";
}

<h2>Move Stock</h2>

@Html.Action("_StockListByLocation")
<div class="col-md-offset-2 col-md-10 bottom-right">
    <input type="button" onclick="movestockshow()" value="Move Stock" class="btn btn-default" />
</div>