@model Ganedata.Core.Entities.Domain.TenantDepartments
<hgroup>
    <h2><span>Product Department</span></h2>
    <h3><span>@Html.ValidationSummary("", new { @id = "vldProductCategory" })</span></h3>
</hgroup>
@using (Html.BeginForm("SaveCategory", "Products", FormMethod.Post, new { @id = "frmproductCategory" }))
{
    @Html.HiddenFor(m => m.DepartmentId)
    <div class="col-md-12 pull-left">
        <div class="input-group h-100 justify-content-center align-items-center">
            <label class ="col-md-4">Product Department<span style="color:red"> *</span>  </label>
            <div class="col-md-8">
                @Html.EditorFor(m => m.DepartmentName)
                @Html.ValidationMessageFor(model => model.DepartmentName)
            </div>
        </div>

    </div>
    if (!Request.Url.AbsolutePath.ToLower().Contains("savecategory"))
    {
        <div class="col-md-offset-2 col-md-10 bottom-right-popup">
            <input type="button" onclick="productCategoryPost()" value="Save" class="btn btn-primary" />
            <input type="button" onclick="cancelproductCategoryadd()" value="Cancel" class="btn btn-default" />
        </div>
    }
    else
    {
        <div class="col-md-offset-2 col-md-10 bottom-right-popup">
            <input type="submit" value="Save" class="btn btn-primary" />
            <div class="btn btn-default"> @Html.ActionLink("Cancel", "Edit", new { @id = Session["pId"] })</div>
        </div>
    }

}
