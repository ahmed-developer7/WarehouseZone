@model Ganedata.Core.Entities.Domain.OrderNotes
<hgroup>
    <h2><span>Order Notes</span></h2>
    <h3><span>@Html.ValidationSummary("", new { @id = "vldOrderNotes" })</span></h3>
</hgroup>

@using (Html.BeginForm("_AttributeSubmit", "Products", FormMethod.Post, new { @id = "frmOrderNotes" }))
{
    @Html.HiddenFor(m => m.OrderNoteId)
    @Html.Hidden("OrderID", (string)ViewBag.OrderID)
    <div class="col-md-12 mb-2">
        <div class="input-group h-100 justify-content-center align-items-center">
            <label class="col-md-2">Notes<span style="color:red">*</span></label>
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.Notes)
                @Html.ValidationMessageFor(model => model.Notes)
            </div>
            <div class="col-md-2">
                <input type="button" onclick="saveNotes()" class="btn btn-primary p-2" value="Save">
            </div>
        </div>
    </div>
    <div class="col-md-12">
        @Html.Action("_OrderNotesList", "Order")
    </div>
    <div class="col-md-offset-2 col-md-10 bottom-right-popup">
        <input type="button" onclick="javaScript: ModelOrderNotes.Hide();" value="Close" class="btn btn-default" />
    </div>
}
