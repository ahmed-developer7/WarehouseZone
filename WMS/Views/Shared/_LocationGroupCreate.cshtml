@model Ganedata.Core.Entities.Domain.LocationGroup
<hgroup>
    <h3><span>@Html.ValidationSummary("", new { @id = "vldLocationGroup" })</span></h3>
</hgroup>
@using (Html.BeginForm("SaveLocationType", "Locations", FormMethod.Post, new { @id = "frmlgroup" }))
{
    @Html.HiddenFor(m => m.LocationGroupId)
    <div class="col-md-12 pull-left">
        <div class="input-group h-100 justify-content-center align-items-center">
            <label class ="col-md-4">Location Group<span style="color:red"> *</span></label>
            <div class="col-md-8">
                @Html.EditorFor(m => m.Locdescription)
                @Html.ValidationMessageFor(model => model.Locdescription)
            </div>
        </div>
    </div>
    <div class="col-md-offset-2 col-md-10 bottom-right-popup">
        <input type="button" onclick="locationGroupPost()" value="Save" class="btn btn-primary" />
        <input type="button" onclick="ModalLocationGroup.Hide()" value="Cancel" class="btn btn-default" />
    </div>
}