@model int
@using (Ajax.BeginForm("SearchAvailable", "MarketRoutes", new { id = Model, FormMethod.Post },
                                                                            new AjaxOptions
                                                                            {
                                                                                InsertionMode = InsertionMode.Replace,
                                                                                HttpMethod = "POST",
                                                                                UpdateTargetId = "SearchUpdate",
                                                                                OnSuccess = "SearchAvailableSuccess",
                                                                                OnBegin = "SearchAvailableStart"
                                                                            }))
{
    <div class="col-md-12 p-0">
        <div class="input-group col-md-3 p-2 h-100 pull-left justify-content-center align-items-center">
            <h4>Search By Name / Account Code:</h4>
        </div>
        <div class="input-group col-md-6 p-2 pull-left justify-content-center align-items-center">
            @Html.TextBox("query", null, new { @class = "form-control input-lg" })
        </div>
        <div class="input-group col-md-3 pull-left justify-content-center align-items-center">
            <input type="submit" id="AjexSubmit" class="btn btn-primary " value="Search" />
        </div>
    </div>
}

<script type="text/javascript">

    function SearchAvailableStart() {
        $('#AjexSubmit').prop("disabled", true);
        $("#dvbusy").show();

    }

    function SearchAvailableSuccess() {
        $("#dvbusy").hide();
        $('#AjexSubmit').prop("disabled", false);
    }
</script>