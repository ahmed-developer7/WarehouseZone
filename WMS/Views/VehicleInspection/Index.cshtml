@model Ganedata.Core.Entities.Domain.ViewModels.InspectionsViewModel
@using Ganedata.Core.Entities.Helpers

@section scripts {

    @Html.DevExpress().GetStyleSheets(
        new StyleSheet { ExtensionType = ExtensionType.GridView, Theme = GaneStaticAppExtensions.DevexTheme }
        )

    @Html.DevExpress().GetScripts(
        new Script { ExtensionType = ExtensionType.GridView }
        )
}


@{
    ViewBag.Title = "Vehicle Inspections";
}

<h2><span>@ViewBag.Title</span></h2>

<div class="col-md-12 p-0">
    @if (ViewBag.Message != null)
    { 
        <div class="alert-success col-md-12">
            @Model.RecordsCount Results
        </div>
    }

    @Html.Action("InspectionsListPartial", Model)

</div>

<div class="col-md-offset-2 col-md-10 bottom-right">
    <a class="btn btn-primary" href="/vehicleinspection/edit/0"><b class="fa fa-plus"></b> Add Inspection Report</a>
</div>